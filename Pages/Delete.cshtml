@page "{characterName}"
@model DeleteModel

<form method="post">
    <div class="no-drag modal-dialog">
        <div class="no-drag modal-content" style="background-color:#2F3136;">
            <div class="no-drag modal-header" style="border:none;">
                <h3 class="no-drag modal-title text-danger">Delete @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.Character.Name)</h3>
            </div>
            <div class="no-drag modal-body" style="border:none;">
                <h4 class="no-drag text-danger">Are you sure you want to delete @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.Character.Name)? This will remove all character and experience data related to @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(Model.Character.Name) and cannot be undone.</h4>
            </div>
            <div class="no-drag modal-footer" style="border:none;">
                <button type="submit" class="no-drag btn btn-danger">Delete</button>
                <a type="button" class="no-drag btn btn-secondary" href="/experience/@Model.Character.Name">I'm not ready</a>
            </div>
        </div>
    </div>
</form>